---
// Componente de búsqueda integrada con Pagefind
---

<div id="search-container" class="relative">
  <!-- Botón de búsqueda -->
  <button
    id="search-button"
    class="p-2 text-gray-600 dark:text-gray-300 hover:text-unam-blue-500 dark:hover:text-accent-cyan-500 transition-colors"
    aria-label="Buscar"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
  </button>

  <!-- Modal Template (hidden by default) -->
  <dialog id="search-modal" class="bg-transparent p-0 w-full h-full max-w-full max-h-full backdrop:bg-black/50 backdrop:backdrop-blur-sm z-50">
    <div class="fixed inset-0 flex items-start justify-center pt-20 px-4" id="modal-content">
       <div class="w-full max-w-2xl bg-white dark:bg-gray-800 rounded-2xl shadow-2xl overflow-hidden flex flex-col max-h-[80vh]">
          
          <!-- Header / Input -->
          <div class="p-6 border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 sticky top-0 z-10">
            <div class="relative flex items-center">
              <svg class="absolute left-4 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <input
                type="text"
                id="search-input"
                placeholder="Buscar en el sitio..."
                class="w-full pl-12 pr-12 py-3 bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg text-gray-900 dark:text-white placeholder-gray-500 focus:ring-2 focus:ring-unam-blue-500 dark:focus:ring-accent-cyan-500 outline-none"
                autocomplete="off"
              />
              <button id="close-search" class="absolute right-4 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
              </button>
            </div>
          </div>

          <!-- Results -->
          <div id="search-results" class="flex-1 overflow-y-auto p-6 space-y-4 bg-gray-50 dark:bg-gray-900/50">
             <div class="text-center text-gray-500 dark:text-gray-400 py-8" id="search-placeholder">
                Escribe para buscar...
             </div>
             <!-- Results injected here -->
          </div>
          
          <!-- Footer -->
          <div class="px-6 py-3 bg-gray-100 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 text-xs text-gray-500 flex justify-between">
             <span><kbd class="px-2 py-1 bg-white dark:bg-gray-800 border rounded">ESC</kbd> para cerrar</span>
             <span class="text-gray-400">Powered by Pagefind</span>
          </div>
       </div>
    </div>
  </dialog>
</div>

<script is:inline>
  // Logic for search using standard DOM API (Astro-friendly)
  const button = document.getElementById('search-button');
  const modal = document.getElementById('search-modal');
  const closeBtn = document.getElementById('close-search');
  const input = document.getElementById('search-input');
  const resultsContainer = document.getElementById('search-results');
  const modalContent = document.getElementById('modal-content');

  // Open modal
  button?.addEventListener('click', () => {
    modal?.showModal();
    // Focus after animation
    setTimeout(() => input?.focus(), 100);
  });

  // Close modal
  const closeSearch = () => {
    modal?.close();
    if (input) input.value = '';
    if (resultsContainer) {
      resultsContainer.innerHTML = '<div class="text-center text-gray-500 dark:text-gray-400 py-8">Escribe para buscar...</div>';
    }
  };

  closeBtn?.addEventListener('click', closeSearch);
  
  // Close on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal?.open) {
      closeSearch();
    }
  });
  
  // Close on backdrop click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal || e.target === modalContent) {
        closeSearch();
    }
  });

  // Pagefind logic
  let pagefind = null;
  
  const initPagefind = async () => {
    if (pagefind) return;
    try {
        // En dev mode esto fallará porque no existe el archivo estático
        // En producción funcionará
        pagefind = await import('/pagefind/pagefind.js');
        await pagefind.options({
            excerptLength: 20
        });
    } catch (e) {
        console.warn('Pagefind no disponible (probablemente en DEV mode).', e);
        if (resultsContainer) {
          resultsContainer.innerHTML = '<div class="text-center text-yellow-600 dark:text-yellow-500 py-4">Búsqueda solo disponible en producción (build).</div>';
        }
    }
  };

  input?.addEventListener('input', async (e) => {
    const query = e.target.value;
    
    if (!query) {
        if (resultsContainer) {
          resultsContainer.innerHTML = '<div class="text-center text-gray-500 dark:text-gray-400 py-8">Escribe para buscar...</div>';
        }
        return;
    }

    if (!pagefind) {
        await initPagefind();
        if (!pagefind) return; // Si falló la carga
    }

    try {
      const search = await pagefind.search(query);
      const results = await Promise.all(search.results.slice(0, 10).map(r => r.data()));

      if (results.length === 0) {
          if (resultsContainer) {
            resultsContainer.innerHTML = `<div class="text-center text-gray-500 py-8">No se encontraron resultados para "${query}"</div>`;
          }
          return;
      }

      if (resultsContainer) {
        resultsContainer.innerHTML = results.map(r => `
            <a href="${r.url}" class="block p-4 bg-white dark:bg-gray-800 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors border border-gray-100 dark:border-gray-700 shadow-sm">
                <h3 class="text-lg font-bold text-unam-blue-600 dark:text-accent-cyan-400 mb-1">${r.meta.title}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2">${r.excerpt}</p>
            </a>
        `).join('');
      }
    } catch (error) {
      console.error('Error al buscar:', error);
      if (resultsContainer) {
        resultsContainer.innerHTML = '<div class="text-center text-red-600 dark:text-red-500 py-4">Error al realizar la búsqueda. Por favor intenta de nuevo.</div>';
      }
    }
  });
  
  // Preload on hover
  button?.addEventListener('mouseenter', initPagefind);
</script>

<style>
  dialog::backdrop {
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }
</style>
