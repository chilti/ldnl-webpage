---
// Header component with institutional logos
import Search from '../features/Search.astro';
import DarkModeToggle from '../features/DarkModeToggle.astro';
import LanguageSwitch from '../features/LanguageSwitch.astro';
---

<header 
	class="sticky top-0 z-50 backdrop-blur-md bg-white/90 dark:bg-gray-900/90 border-b border-gray-200 dark:border-gray-700 transition-all duration-300"
	x-data="{ scrolled: false }"
	x-init="window.addEventListener('scroll', () => { scrolled = window.scrollY > 20 })"
	:class="{ 'shadow-lg': scrolled }"
>
	<div class="container mx-auto px-4 py-4">
		<div class="flex items-center justify-between flex-wrap gap-4">
			<!-- Logos institucionales -->
			<div class="flex items-center gap-4 md:gap-6 flex-wrap">
				<!-- Logo UNAM -->
				<a 
					href="https://www.unam.mx" 
					target="_blank"
					rel="noopener noreferrer"
					class="hover:opacity-80 transition-opacity"
					aria-label="Universidad Nacional Autónoma de México"
				>
					<img 
						src="/images/logos/unam.svg" 
						alt="UNAM" 
						class="h-12 md:h-16 w-auto"
						width="64"
						height="64"
					/>
				</a>
				
				<!-- Logo Facultad de Ciencias -->
				<a 
					href="https://www.fciencias.unam.mx" 
					target="_blank"
					rel="noopener noreferrer"
					class="hover:opacity-80 transition-opacity"
					aria-label="Facultad de Ciencias UNAM"
				>
					<img 
						src="/images/logos/facultad-ciencias.svg" 
						alt="Facultad de Ciencias" 
						class="h-12 md:h-16 w-auto"
						width="64"
						height="64"
					/>
				</a>
				
				<!-- Separador -->
				<div class="hidden md:block border-l border-gray-300 dark:border-gray-600 h-12 md:h-16"></div>
				
				<!-- Información del laboratorio (clickeable) -->
				<a href="/" class="flex-1 min-w-0 hover:opacity-90 transition-opacity">
					<h1 class="text-lg md:text-xl lg:text-2xl font-bold leading-tight">
						<span class="gradient-text-animated">
							Laboratorio de Dinámica No Lineal
						</span>
					</h1>
					<p class="text-xs md:text-sm text-gray-600 dark:text-gray-400 mt-1">
						<span class="hover:text-unam-blue-500 dark:hover:text-accent-cyan-500 transition-colors">
							Departamento de Matemáticas
						</span>
						<span class="mx-1">|</span>
						<span class="hover:text-unam-blue-500 dark:hover:text-accent-cyan-500 transition-colors">
							Facultad de Ciencias
						</span>
					</p>
				</a>
			</div>
			
			<!-- Controles del header -->
			<div class="flex items-center gap-2 md:gap-4">
				<!-- Logo del Laboratorio (derecha) -->
				<a 
					href="/" 
					class="hover:opacity-80 transition-opacity hidden sm:block"
					aria-label="Laboratorio de Dinámica No Lineal - Inicio"
				>
					<img 
						src="/images/logos/ldnl.svg" 
						alt="LDNL" 
						class="h-10 md:h-12 w-auto"
						width="48"
						height="48"
					/>
				</a>
				
				<DarkModeToggle />
				<LanguageSwitch />
				<Search />
				
				<!-- Mobile menu button -->
				<button
					type="button"
					class="md:hidden p-2 rounded-lg bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
					@click="$dispatch('toggle-mobile-menu')"
					aria-label="Toggle menu"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>
			</div>
		</div>
	</div>
</header>

<script>
	// Dark mode toggle
	const themeToggle = document.getElementById('theme-toggle');
	
	themeToggle?.addEventListener('click', () => {
		const isDark = document.documentElement.classList.toggle('dark');
		localStorage.setItem('theme', isDark ? 'dark' : 'light');
	});
</script>
