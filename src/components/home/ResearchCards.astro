---
// Research cards component
const researchAreas = [
	{
		title: 'Bioinformática',
		description: 'Análisis de secuencias biológicas y alineamiento múltiple utilizando algoritmos avanzados.',
		icon: 'dna',
		link: '/investigacion/bioinformatica',
		gradient: 'from-blue-500 to-cyan-500'
	},
	{
		title: 'Neuroinformática',
		description: 'Modelado matemático de neuronas y redes neuronales para comprender el cerebro.',
		icon: 'brain',
		link: '/investigacion/neuroinformatica',
		gradient: 'from-purple-500 to-pink-500'
	},
	{
		title: 'Sistemas Dinámicos',
		description: 'Estudio de sistemas complejos y comportamiento caótico en sistemas no lineales.',
		icon: 'activity',
		link: '/investigacion/sistemas-dinamicos',
		gradient: 'from-orange-500 to-red-500'
	},
	{
		title: 'Data Science',
		description: 'Extracción de conocimiento de grandes volúmenes de datos científicos.',
		icon: 'bar-chart',
		link: '/investigacion/data-science',
		gradient: 'from-green-500 to-teal-500'
	}
];
---

<section class="py-20 bg-gray-50 dark:bg-gray-800/50">
	<div class="container mx-auto px-4">
		<!-- Section header -->
		<div class="text-center mb-16">
			<h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900 dark:text-white mb-4">
				Áreas de Investigación
			</h2>
			<p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
				Exploramos la complejidad desde múltiples perspectivas científicas
			</p>
		</div>
		
		<!-- Cards grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			{researchAreas.map((area, index) => (
				<a 
					href={area.link}
					class="group relative glass-card p-6 hover:scale-105 transition-all duration-300 block"
					x-data
					x-intersect="$el.classList.add('animate-in-up')"
					style={`animation-delay: ${index * 0.1}s`}
				>
					<!-- Gradient border -->
					<div class={`absolute inset-0 rounded-xl bg-gradient-to-br ${area.gradient} opacity-0 group-hover:opacity-20 transition-opacity duration-300`}></div>
					
					<!-- Icon -->
					<div class={`w-16 h-16 rounded-lg bg-gradient-to-br ${area.gradient} flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300`}>
						{area.icon === 'dna' && (
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
							</svg>
						)}
						{area.icon === 'brain' && (
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
							</svg>
						)}
						{area.icon === 'activity' && (
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
							</svg>
						)}
						{area.icon === 'bar-chart' && (
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
							</svg>
						)}
					</div>
					
					<!-- Content -->
					<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
						{area.title}
					</h3>
					<p class="text-gray-600 dark:text-gray-400 mb-4 text-sm">
						{area.description}
					</p>
					
					<!-- Link indicator -->
					<span class="inline-flex items-center gap-2 text-unam-blue-500 dark:text-accent-cyan-500 font-medium group-hover:gap-3 transition-all duration-300">
						Explorar
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
						</svg>
					</span>
				</a>
			))}
		</div>
	</div>
</section>
