---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const proyectosEntries = await getCollection('proyectos');
const vinculacionEntries = await getCollection('vinculacion');
---

<BaseLayout title="Proyectos y Vinculación" description="Proyectos de investigación, docencia y vinculación del Laboratorio de Dinámica No Lineal">
  <main class="min-h-screen bg-white dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-accent-purple-600 to-unam-gold-600 text-white py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-display font-bold mb-6 animate-fade-in">
            Proyectos y Vinculación
          </h1>
          <p class="text-xl text-white/90 animate-fade-in" style="animation-delay: 0.2s">
            Nuestro trabajo de investigación, docencia y vinculación con instituciones académicas, 
            gubernamentales y el sector productivo.
          </p>
        </div>
      </div>
    </section>

    <!-- Proyectos Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-8 text-center">
          Proyectos
        </h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {proyectosEntries.map((entry, index) => (
            <a 
              href={`/proyectos/${entry.slug}`}
              class="card p-8 text-center group animate-fade-in"
              style={`animation-delay: ${0.1 * index}s`}
            >
              <div class="mb-4">
                {entry.data.category === 'investigacion' && (
                  <svg class="w-16 h-16 mx-auto text-unam-blue-500 dark:text-accent-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                )}
                {entry.data.category === 'docencia' && (
                  <svg class="w-16 h-16 mx-auto text-unam-blue-500 dark:text-accent-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                )}
                {entry.data.category === 'arte-ciencia' && (
                  <svg class="w-16 h-16 mx-auto text-unam-blue-500 dark:text-accent-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                  </svg>
                )}
              </div>
              
              <h3 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-3 group-hover:text-unam-blue-500 dark:group-hover:text-accent-cyan-500 transition-colors">
                {entry.data.title}
              </h3>
              
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {entry.data.description}
              </p>
              
              <div class="flex items-center justify-center text-unam-blue-500 dark:text-accent-cyan-500 font-medium group-hover:underline">
                Ver más
                <svg class="w-5 h-5 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Vinculación Section -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-8 text-center">
          Vinculación
        </h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {vinculacionEntries.map((entry, index) => (
            <a 
              href={`/vinculacion/${entry.slug}`}
              class="card p-8 text-center group animate-fade-in"
              style={`animation-delay: ${0.1 * (index + 3)}s`}
            >
              <div class="mb-4">
                <svg class="w-16 h-16 mx-auto text-unam-blue-500 dark:text-accent-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              
              <h3 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-3 group-hover:text-unam-blue-500 dark:group-hover:text-accent-cyan-500 transition-colors">
                {entry.data.title}
              </h3>
              
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                {entry.data.description}
              </p>
              
              <div class="flex items-center justify-center text-unam-blue-500 dark:text-accent-cyan-500 font-medium group-hover:underline">
                Ver más
                <svg class="w-5 h-5 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
