---
import BaseLayout from '../../layouts/BaseLayout.astro';
import P5Canvas from '../../components/gallery/P5Canvas.astro';

const sketches = [
  {
    id: 'lorenz',
    title: 'Atractor de Lorenz',
    description: 'Un sistema dinámico determinista tridimensional que exhibe comportamiento caótico. Es uno de los primeros ejemplos de efecto mariposa.',
    category: 'Sistemas Dinámicos'
  },
  {
    id: 'logistic-map',
    title: 'Mapa Logístico',
    description: 'Visualización del diagrama de bifurcación de la ecuación logística, mostrando cómo el orden da paso al caos.',
    category: 'Caos y Bifurcaciones'
  },
  {
    id: 'game-of-life',
    title: 'Juego de la Vida',
    description: 'El autómata celular de Conway. Un sistema Turing completo gobernado por reglas simples de nacimiento y muerte.',
    category: 'Autómatas Celulares'
  }
];
---

<BaseLayout title="Galería Interactiva" description="Visualizaciones de sistemas dinámicos y caos">
  <main class="min-h-screen bg-white dark:bg-gray-900">
    <!-- Hero -->
    <section class="bg-gradient-to-r from-purple-600 to-indigo-600 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-display font-bold mb-6 animate-fade-in">
          Galería Interactiva
        </h1>
        <p class="text-xl text-white/90 animate-fade-in" style="animation-delay: 0.2s">
          Explora la belleza matemática de los sistemas dinámicos a través de simulaciones en tiempo real.
        </p>
      </div>
    </section>

    <!-- Gallery Grid -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sketches.map((sketch) => (
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow border border-gray-100 dark:border-gray-700">
              <div class="relative aspect-video bg-black group">
                <!-- Preview / P5 Canvas -->
                <div class="absolute inset-0">
                    <P5Canvas sketch={`${sketch.id}.js`} containerId={`canvas-${sketch.id}`} />
                </div>
                
                <!-- Overlay on hover -->
                <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                    <button 
                        class="px-6 py-2 bg-white text-gray-900 rounded-full font-bold transform hover:scale-105 transition-transform"
                        onclick={`document.getElementById('modal-${sketch.id}').showModal()`}
                    >
                        Ver Pantalla Completa
                    </button>
                </div>
              </div>
              
              <div class="p-6">
                <span class="text-xs font-semibold tracking-wider text-purple-600 dark:text-purple-400 uppercase mb-2 block">
                  {sketch.category}
                </span>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                  {sketch.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-400 text-sm">
                  {sketch.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Modals -->
    {sketches.map((sketch) => (
        <dialog id={`modal-${sketch.id}`} class="modal w-full max-w-5xl h-[80vh] bg-transparent backdrop:bg-black/90 p-0 rounded-xl overflow-hidden shadow-2xl">
            <div class="relative w-full h-full bg-gray-900 flex flex-col">
                <div class="flex justify-between items-center p-4 bg-gray-800 text-white z-10">
                    <h3 class="text-xl font-bold">{sketch.title}</h3>
                    <form method="dialog">
                        <button class="text-gray-400 hover:text-white">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        </button>
                    </form>
                </div>
                <div class="flex-1 relative" id={`modal-canvas-container-${sketch.id}`}>
                    <!-- Aquí se podría cargar una instancia más grande o interactiva -->
                    <div class="absolute inset-0 flex items-center justify-center text-gray-500">
                        <p>Interactúa con el canvas aquí (Próximamente)</p>
                    </div>
                </div>
            </div>
        </dialog>
    ))}

  </main>
</BaseLayout>

<style>
    /* Dialog Animation */
    dialog::backdrop {
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(4px);
    }
    dialog[open] {
        animation: zoomIn 0.3s ease-out;
    }
    @keyframes zoomIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }
</style>
