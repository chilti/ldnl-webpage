<BaseLayout title={pageTitle} description={pageDescription}>
	<!-- Breadcrumbs -->
	<div class="bg-gray-50 dark:bg-gray-800/50 border-b border-gray-200 dark:border-gray-700">
		<div class="container mx-auto px-4 py-4">
			<nav class="flex text-sm text-gray-600 dark:text-gray-400">
				<a href="/" class="hover:text-unam-blue dark:hover:text-unam-gold-300 transition-colors">Inicio</a>
				<span class="mx-2">/</span>
				<span class="text-gray-900 dark:text-white">Integrantes</span>
			</nav>
		</div>
	</div>

	<!-- Page Header -->
	<section class="py-16 bg-gradient-primary text-white">
		<div class="container mx-auto px-4">
			<h1 class="text-4xl md:text-5xl font-display font-bold mb-4">Integrantes</h1>
			<p class="text-xl text-white/90 max-w-3xl">
				Equipo del Laboratorio de Dinámica No Lineal
			</p>
		</div>
	</section>

	<!-- Responsable Section -->
	<section class="py-16 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-8">Responsable</h2>
			
			<div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-8 shadow-lg">
				<div class="flex flex-col md:flex-row gap-8">
					<div class="md:w-1/3">
						<img 
							src={responsable.photo} 
							alt={responsable.name}
							class="w-full rounded-lg shadow-md"
						/>
					</div>
					<div class="md:w-2/3">
						<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{responsable.name}</h3>
						<p class="text-lg text-unam-blue dark:text-unam-gold-300 mb-2">{responsable.position}</p>
						<p class="text-md text-gray-700 dark:text-gray-300 mb-4">{responsable.titles}</p>
						<p class="text-gray-600 dark:text-gray-400 mb-6">{responsable.department}</p>
						
						<div class="mb-6">
							<h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Formación Académica:</h4>
							<ul class="list-disc list-inside space-y-1 text-gray-600 dark:text-gray-400">
								{responsable.education.map(edu => <li>{edu}</li>)}
							</ul>
						</div>
						
						<div>
							<h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Líneas de Investigación:</h4>
							<ul class="list-disc list-inside space-y-1 text-gray-600 dark:text-gray-400">
								{responsable.research.map(line => <li>{line}</li>)}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Técnicos Académicos Section -->
	<section class="py-16 bg-gray-50 dark:bg-gray-800/50">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-8">Técnicos Académicos</h2>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				{tecnicos.map(tecnico => (
					<div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
						<img 
							src={tecnico.photo} 
							alt={tecnico.name}
							class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
						/>
						<h3 class="text-lg font-semibold text-gray-900 dark:text-white text-center mb-2">
							{tecnico.name}
						</h3>
						<p class="text-sm text-unam-blue dark:text-unam-gold-300 text-center mb-2">
							{tecnico.position}
						</p>
						{tecnico.titles && (
							<p class="text-xs text-gray-700 dark:text-gray-300 text-center mb-2">{tecnico.titles}</p>
						)}
						{tecnico.department && (
							<p class="text-xs text-gray-600 dark:text-gray-400 text-center">
								{tecnico.department}
							</p>
						)}
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Coautores Section -->
	<section class="py-16 bg-white dark:bg-gray-900">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-8">Coautores Principales</h2>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
				{coautores.slice(0, 8).map(coautor => (
					<div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 shadow-lg hover:shadow-xl transition-shadow">
						<img 
							src={coautor.photo} 
							alt={coautor.name}
							class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
						/>
						{coautor.url ? (
							<a href={coautor.url} target="_blank" rel="noopener noreferrer" class="block text-center">
								<h3 class="text-lg font-semibold text-unam-blue dark:text-unam-gold-300 hover:underline mb-2">
									{coautor.name}
								</h3>
							</a>
						) : (
							<h3 class="text-lg font-semibold text-gray-900 dark:text-white text-center mb-2">
								{coautor.name}
							</h3>
						)}
						{coautor.affiliation && (
							<p class="text-sm text-gray-600 dark:text-gray-400 text-center">
								{coautor.affiliation}
							</p>
						)}
					</div>
				))}
			</div>

			<h3 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-6">Colaboradores Adicionales</h3>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
				{coautores.slice(8).map(coautor => (
					<div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 shadow hover:shadow-md transition-shadow">
						{coautor.url ? (
							<a href={coautor.url} target="_blank" rel="noopener noreferrer">
								<h4 class="font-semibold text-unam-blue dark:text-unam-gold-300 hover:underline mb-1">
									{coautor.name}
								</h4>
							</a>
						) : (
							<h4 class="font-semibold text-gray-900 dark:text-white mb-1">
								{coautor.name}
							</h4>
						)}
						{coautor.affiliation && (
							<p class="text-sm text-gray-600 dark:text-gray-400">
								{coautor.affiliation}
							</p>
						)}
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Estudiantes Actuales Section -->
	<section class="py-16 bg-white dark:bg-gray-900">
